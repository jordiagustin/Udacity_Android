<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_BackGround"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/background"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:id="@+id/textView_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Montserrat Zaera"
            android:textSize="48dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#009E90"
            android:layout_marginTop="20dp">
        </TextView>

        <TextView
            android:id="@+id/textView_SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Fisioterapeuta i osteòpata"
            android:textSize="32dp"
            android:textColor="@color/black"
            android:layout_below="@id/textView_Title">
        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="130dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_SubTitle"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/foto">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView_SchoolLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/col"
            android:layout_below="@id/imageView_BackGround"
            android:layout_alignParentLeft="true">
        </ImageView>

        <TextView
            android:id="@+id/textView_numCol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView_SchoolLogo"
            android:layout_below="@id/imageView_BackGround"
            android:text="Nº col·legiada 4552"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_margin="10dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView_SchoolLogo"
            android:layout_below="@id/textView_numCol"
            android:text="Col·legi de Fisioterapeutes de Catalunya"
            android:textSize="16dp"
            android:layout_margin="10dp">
        </TextView>

        <TextView
            android:layout_below="@id/imageView_SchoolLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Telf. 977 202 172"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textAlignment="center"
            android:padding="30dp"
            android:background="#009E90">
>
        </TextView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>